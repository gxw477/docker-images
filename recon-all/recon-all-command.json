{
    "name": "freesurfer-5-3-0",
    "label": "Freesurfer v5.3.0",
    "description": "Runs Freesurfer v5.3.0 using vistalab/recon-all.",
    "info-url": "https://github.com/vistalab/docker/tree/master/freesurfer/recon-all",
    "version": "1.0",
    "schema-version": "1.0",
    "type": "docker",
    "image": "xnat/freesurfer:b",
    "command-line": "run.sh /input /output #SESSION_ID# #SESSION_LABEL# #PROJECT# #SCAN_ID# #RECON_ALL_ARGS#",
    "workdir": "/output",
    "mounts": [
        {
            "name": "input",
            "writable": false,
            "path": "/input"
        },
        {
            "name": "output",
            "writable": true,
            "path": "/output"
        }
    ],
    "inputs": [
        {
            "name": "RECON_ALL_ARGS",
            "description": "Arguments to pass to recon-all",
            "default-value": "-all"
        },
        {
            "name": "SESSION_ID",
            "description": "XNAT session ID",
            "type": "string",
            "required": true
        },
        {
            "name": "SESSION_LABEL",
            "description": "XNAT session label",
            "type": "string",
            "required": true
        },
        {
            "name": "PROJECT",
            "description": "XNAT project",
            "type": "string",
            "required": true
        },
        {
            "name": "SCAN_ID",
            "description": "XNAT scan ID",
            "type": "string",
            "required": true
        }
    ],
    "outputs": [
        {
            "name": "data",
            "mount": "output"
        }
    ],
    "xnat": [
        {
            "name": "recon-all-session",
            "description": "Run Freesurfer 5.3 on a session",
            "contexts": ["xnat:imageSessionData"],
            "external-inputs": [
                {
                    "name": "session",
                    "description": "Input session",
                    "type": "Session",
                    "required": true
                }
            ],
            "derived-inputs": [
                {
                    "name": "session-label",
                    "description": "Session label. Used as Freesurfer subject identifier.",
                    "type": "string",
                    "required": true,
                    "derived-from-xnat-input": "session",
                    "derived-from-xnat-object-property": "label",
                    "provides-value-for-command-input": "SESSION_LABEL"
                },
                {
                    "name": "session-id",
                    "description": "Session ID. Used to generate Freesurfer assessor ID.",
                    "type": "string",
                    "required": true,
                    "derived-from-xnat-input": "session",
                    "derived-from-xnat-object-property": "id",
                    "provides-value-for-command-input": "SESSION_ID"
                },
                {
                    "name": "project-id",
                    "description": "Project id",
                    "type": "string",
                    "derived-from-xnat-input": "session",
                    "derived-from-xnat-object-property": "project-id",
                    "provides-value-for-command-input": "PROJECT"
                },
                {
                    "name": "scan",
                    "description": "Input scan",
                    "type": "Scan",
                    "derived-from-xnat-input": "session"
                },
                {
                    "name": "scan-id",
                    "description": "Input scan ID",
                    "type": "string",
                    "derived-from-xnat-input": "scan",
                    "derived-from-xnat-object-property": "id",
                    "provides-value-for-command-input": "SCAN_ID"
                },
                {
                    "name": "resource",
                    "description": "Input resource: DICOM or NIFTI",
                    "type": "Resource",
                    "derived-from-xnat-input": "scan",
                    "matcher": "@.label in [\"DICOM\", \"NIFTI\"]",
                    "provides-files-for-command-mount": "input"
                }
            ],
            "output-handlers": [
                {
                    "name": "data-resource",
                    "accepts-command-output": "data",
                    "as-a-child-of-xnat-input": "session",
                    "type": "Resource",
                    "label": "FREESURFER_DATA"
                }
            ]
        }
    ]
}